{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["expo", "jest"],
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src/**/*",
    "navigation/**/*",
    "app/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
